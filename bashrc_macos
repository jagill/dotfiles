CONFIG=$HOME/Dropbox/config
if [ -f $CONFIG/bashrc ]; then
    source $CONFIG/bashrc
fi

if [ -f $CONFIG/git-completion.bash ]; then
    source $CONFIG/git-completion.bash
fi

if [ -d $HOME/bin ]; then
    PATH=$PATH:$HOME/bin
fi
if [ -d $HOME/Dropbox/bin ]; then
    PATH=$PATH:$HOME/Dropbox/bin:/usr/local/share/npm/bin
fi
if [ -d /usr/local/share/npm/bin ]; then
    PATH=$PATH:/usr/local/share/npm/bin
fi

# If not running interactively, don't do anything
if [[ -n "$PS1" ]] ; then
    export CLICOLOR=1
    export LSCOLORS=GxFxCxDxBxegedabagaced

    launchctl setenv PATH $PATH
    eval "$(rbenv init -)"

    export NVM_DIR="/Users/jag/.nvm"
    # This takes about 750ms; is there a way to speed it up?
    [ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"  # This loads nvm

fi #endif for $PS1

